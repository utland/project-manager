generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model UserModel {
  id String @id
  login String @unique
  password String
  name String
  email String
  info String
  projects ProjectModel[] @relation("UserToProject")
  invited ProjectModel[] @relation("Invites")
  photoUrl String @default("https://icons.veryicon.com/png/o/miscellaneous/common-icons-31/default-avatar-2.png")
  blocks BlockModel[]
  tasks TaskModel[]
}

model ProjectModel {
  id String @id
  globalKey Int @default(1)
  date DateTime @default(now())
  name String
  description String
  adminId String
  users UserModel[] @relation("UserToProject")
  invites UserModel[] @relation("Invites")
  blocks BlockModel[]
  tasks TaskModel[]
}

model BlockModel {
  id Int @default(autoincrement()) @id
  key Int 
  name String
  description String
  tasks TaskModel[]
  status Status @default(ToDo)
  projectId String
  parentProject ProjectModel @relation(fields: [projectId], references: [id], onDelete: Cascade)
  users UserModel[]
}

model TaskModel {
  id Int @default(autoincrement()) @id
  key Int
  name String
  subtasks SubtaskModel[]
  status Status @default(ToDo)
  projectId String
  userId String?
  parentProject ProjectModel @relation(fields: [projectId], references: [id], onDelete: Cascade)
  blockId Int?
  parentBlock BlockModel? @relation(fields: [blockId], references: [id], onDelete: Cascade)
  user UserModel? @relation(fields: [userId], references: [id])
}

model SubtaskModel {
  id Int @default(autoincrement()) @id
  key Int 
  name String
  status Status @default(ToDo)
  projectId String
  taskId Int
  blockId Int?
  parentTask TaskModel @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

enum Status {
  ToDo
  InProcess
  Done
}
